<Window x:Class="Practika.Order"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practika"
        mc:Ignorable="d"
        Title="Order" Height="600" Width="900">

    <Grid Background="#CDEEEE" Margin="0,0,0,-6">

        <!-- Заголовок -->
        <TextBlock Text="Order"
                   HorizontalAlignment="Center"
                   FontSize="39"
                   FontWeight="Bold"
                   Foreground="#5A3A28"
                   Margin="0,18,0,512" RenderTransformOrigin="0.538,0.534"/>

        <!-- Верхние два блока -->
        <Grid Margin="10,105,-10,-45">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Table -->
            <Border Background="#D2C0A8" BorderBrush="#FF8A622D" BorderThickness="2" CornerRadius="25" Width="300" Height="80" Margin="44,0,106,452">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,160,0">
                    <TextBlock Text="Table:" FontSize="23" Foreground="#5A3A28"/>

                </StackPanel>

            </Border>
            <Border Background="White" BorderBrush="#FF8A622D" BorderThickness="2"  CornerRadius="30" Width="80" Height="80" Margin="280,-3,82,452"/>

            <!-- Add to Order -->
            <Border Background="#D2C0A8" BorderBrush="#FF8A622D" BorderThickness="2" CornerRadius="25" Width="300" Height="80" Grid.Column="1" Margin="62,0,103,452">
                <TextBlock HorizontalAlignment="Left" Margin="310,27,0,0" FontSize="20" TextWrapping="Wrap" Text="№3" VerticalAlignment="Top" Height="44" Width="68"/>
               
            </Border>
           
            <TextBlock Text="Add to Order:" FontSize="23" Foreground="#5A3A28" Grid.Column="1" Margin="85,24,225,458" RenderTransformOrigin="0.471,0.209"/>
            <Border Background="White" CornerRadius="30" BorderBrush="#FF8A622D" BorderThickness="2" Width="80" Height="80" Grid.Column="1" Margin="288,-4,74,452">
                <TextBlock x:Name="TotalPriceText"
                                   Text="600 rub"
                                   FontSize="19"
                                   Foreground="#5A3A28" Margin="8,17,-8,-28"/>
            </Border>
        </Grid>

        <!-- Основные блюда -->
        <Grid Margin="0,150,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="136*"/>
                <RowDefinition Height="61*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Tiramisu -->
            <Border Background="White" BorderBrush="#FF8A622D" BorderThickness="2" CornerRadius="25" Width="280" Height="270" Margin="33,72,80,94" Grid.RowSpan="2">
                <StackPanel>
                    <Image Margin="12,0,0,0" Source="/IMG/34.png" Stretch="Fill"
               Width="166"
               Height="123"
HorizontalAlignment="Center"
VerticalAlignment="Top"/>

                    <TextBlock Text="TIRAMISU" Margin="0 10 0 0"
                               FontSize="30" FontWeight="Bold" Foreground="#5A3A28"/>
                    <TextBlock Text="400 rub" FontSize="18" Foreground="#5A3A28"/>
                    <TextBlock Text="Add Notes" FontSize="14" Foreground="#8C7C6A"/>

                    <StackPanel Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Center">
                        <Button x:Name="BtnMinus1" Content="-" Width="35" Height="35" Background="#FF8A622D"/>
                        <TextBlock x:Name="Count1" Text="1" Width="25"
                                   TextAlignment="Center" VerticalAlignment="Center"
                                   FontSize="18" Background="#FFD2C0A8" Height="35" RenderTransformOrigin="0.52,0.902"/>
                        <Button x:Name="BtnPlus1" Content="+" Width="35" Height="35" Background="#FF8A622D"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Cappuccino -->
            <Border Background="White" BorderBrush="#FF8A622D" BorderThickness="2" Width="280" Height="270" CornerRadius="25" Padding="15" Margin="103,72,10,94" Grid.RowSpan="2" Grid.Column="1">

                <StackPanel Margin="0,113,0,-17">
                    <TextBlock Text="CAPPUCCINO"
                               FontSize="30" FontWeight="Bold" Foreground="#5A3A28"/>
                    <TextBlock Text="200 rub" FontSize="18" Foreground="#5A3A28"/>
                    <TextBlock Text="Add Notes" FontSize="14" Foreground="#8C7C6A"/>

                    <StackPanel Orientation="Horizontal" Margin="0 10 0 0" HorizontalAlignment="Center">
                        <Button x:Name="BtnMinus2" Content="-" Width="35" Height="35" Background="#FF8A622D"/>
                        <TextBlock x:Name="Count2" Text="1" Width="25"
                                   TextAlignment="Center" VerticalAlignment="Center"
                                   FontSize="18" Background="#FFD2C0A8" Height="35"/>
                        <Button x:Name="BtnPlus2" Content="+" Width="35" Height="35" Background="#FF8A622D"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Image Source="/IMG/33.png" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Top"
Width="148" Height="148" Grid.Column="1" Margin="98,61,0,0" />
        </Grid>

        <!-- Нижняя кнопка "+" -->
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Border Background="White" BorderBrush="#FF8A622D" BorderThickness="2" CornerRadius="40" Padding="20" Width="200" Height="70">
                <Button x:Name="AddButton" Content="+" Width="40" Height="40" Margin="60,-10,60,0" Background="#FF8A622D"/>
            </Border>
        </StackPanel>
        <Image Margin="28,9,806,512" Source="/IMG/exit.png" Width="60" Height="70" VerticalAlignment="Top" HorizontalAlignment="Left" Stretch="Fill" RenderTransformOrigin="1.03,0.508"/>



    </Grid>

</Window>
