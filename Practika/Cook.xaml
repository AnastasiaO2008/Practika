<Window x:Class="Practika.Cook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practika"
        mc:Ignorable="d"
        Title="Cook" Height="450" Width="800">

    <Grid Background="#FFCAEDE9">


        <!-- Header name -->
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Width="250"
                   Height="30"
                   Margin="90,210,0,0"
                   Text="Maxim Lavrov"
                   TextWrapping="Wrap"
                   FontFamily="Arial"
                   FontSize="25"
                   Foreground="#654321"
                   />



        <!-- Buttons -->
        <Button Width="148" Height="116"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Margin="-400,300,0,0"
        Background="#FFDAC7B3"
        Click="Button_Click_2">
            <Button.Content>
                <Image Source="/IMG/image-no-bg-preview (carve.photos) (1).png"
                 Margin="-5,-20,0,0"      
               Width="80"
               Height="77"
               Stretch="Fill"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
            </Button.Content>
        </Button>

        <Button Width="148" Height="116"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        
        Margin="33,300,0,0"
        Background="#FFDAC7B3"
        Click="Button_Click"
        RenderTransformOrigin="0.534,1.174">
            <Button.Content>
                <Image Source="/IMG/image-no-bg-preview (carve.photos) (2).png"
               Margin="-5,-20,0,0"
               Width="80"
               Height="77"
               Stretch="Fill"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"/>
            </Button.Content>
        </Button>

        <Button Width="148" Height="116"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Margin="500,300,0,0"
        Background="#FFDAC7B3"
        Click="Button_Click_1">
            <Button.Content>
                <Image Source="/IMG/2.png"
               Margin="-5,-20,0,0"
               Width="90"
               Height="80"
               Stretch="Fill"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
            </Button.Content>
        </Button>


        <StackPanel Width="380" Height="80" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 55 0 0" Background="#FFDAC7B3" Orientation="Horizontal">
            <Image Source="/IMG/pfpfpf.png"></Image>
            <Image Source="/IMG/pfpfpf.png"></Image>
            <Image Source="/IMG/pfpfpf.png"></Image>
        </StackPanel>

        <!-- Images (mirrored) -->




        <!-- User avatar container -->
        <Border x:Name="ama"
                Width="114"
                Height="111"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,87,0,0"
                Background="White"
                CornerRadius="75"
                BorderBrush="White"
                BorderThickness="5"/>

        <Image Width="140" Height="145" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="-8,77,0,0"
               Source="/IMG/1.png"
               Stretch="Fill"
               RenderTransformOrigin="-0.343,-0.296"/>

        <!-- Text under buttons -->
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="-400,380,0,0"
                   Text="MENU"
                   TextWrapping="Wrap"
                   FontFamily="Arial"
                   FontSize="20"
                   Foreground="#654321"/>

        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="33,380,0,0"
                   Text="ORDERS"
                   TextWrapping="Wrap"
                   FontFamily="Arial"
                   FontSize="20"
                   Foreground="#654321"/>

        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="500,380,0,0"
                   Text="RECIPES"
                   TextWrapping="Wrap"
                   FontFamily="Arial"
                   FontSize="20"
                   Foreground="#654321"/>
        <!-- Circle icon -->
        <Button Width="36" Height="36"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Margin="314,59,0,0"
        BorderThickness="2"
        BorderBrush="#FF654321"
        Background="White"
        Click="PhotoButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="18" 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="{TemplateBinding BorderThickness}">
                        <Image Source="/IMG/image-no-bg-preview (carve.photos) (5).png"
                       Stretch="Uniform"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Width="60" Height="70" BorderThickness="0" Click="PhotoButton2_Click" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 20 30 0">
            <Button.Background>
                <ImageBrush ImageSource="/IMG/bell.png"/>
            </Button.Background>
        </Button>
        <!-- Background images -->

        <Button  BorderThickness="0" Click="PhotoButton_Click3" Width="60" Height="70" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="30 20 0 0">
            <Button.Background>
                <ImageBrush ImageSource="/IMG/exit.png"/>
            </Button.Background>
        </Button>

    </Grid>

</Window>
